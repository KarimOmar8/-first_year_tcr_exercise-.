nav {
  position: fixed;
  display: flex;
  width: 100%;
  padding: 0px;
  min-height: 10vh;
  flex-wrap: wrap;
  margin: auto;
  background: #00a8c7;
  justify-content: space-between;
  top: 0%;
  
}




 ul {
  display: flex;
  align-items: center;
  list-style-type: none;
}
 li {
  font-size: 2.5rem;
  padding: 0 4rem 0 4rem;
}
 a {
  color: white;
  text-decoration: none;
}
nav img {
  width: 5vw;
  position:absolute
}


h1 {
  font-weight: bold;
  font-size: medium;
}

 
h2 {

  text-align: center;
